  <body>
    <div class="container">
      <div class="jumbotron">
        <form action="/login" method="POST"> 
          <h1 class="text-center"><span class="fa fa-lock"></span> Node Authentication</h1>
          <label for="">Username</label>
          <input type="text" class="form-control" id="username" name="username">
