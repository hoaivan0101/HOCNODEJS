    //Error
    h2 Create new user
    form(action="/User/CreateUsers" method="POST")
      //- label(id="name")
      label.py-2.px-md-3.border.bg-light Please add name, email, age and Id.
      input.form-control.my-1(type="text", placeholder="User's name", name="name")
