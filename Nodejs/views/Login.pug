head
  meta(charset='UTF-8')
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  title jQueryTest9-6
style.
  *{
  margin: 0px;
  padding: 0px;
  }
  .box{
  display: flex;
  justify-content: center;
  align-items: center;
  }
  .container{
  background-color: rgb(48, 47, 47);
  width: 40%;
  height: 50%;
  }
  .header{
  height: 20%;
  width: 100%;
  font-size: 25px;
  font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
  color: white;
  text-align: center;
  line-height: 60px;
  border-bottom: 1px solid black;
  }
  .content{
  background-color: rgb(48, 47, 47);
  height: 50%;
  width: 100%;
  }
  li{
  list-style: none;
  height: 40px;
  width: 100%;
  margin: 0px 10px;
  line-height: 40px;
  color: white;
  }
  li input{
  height: 70%;
  width: 90%;
  background-color: rgb(112, 112, 112);
  border-radius: 10px;
  }
  .checkbox{
  height: auto;
  width: auto;
  color: white;
  }
  .confirm{
  border-top: 1px solid black;
  height: 50px;
  display: flex;
  }
  .left{
  margin: 0px 10px;
  width: 60%;
  color: rgb(149, 164, 238);
  }
  .right{
  width: 40%;
  display:flex;
  align-items: center;
  justify-content: center;
  margin-right: 5px;
  }
  .right button{
  background-color: rgb(36, 59, 124);
  border: none;
  color: white;
  height: 80%;
  width: 100%;
  border-radius: 5px;
  font-size: 15px;
  }
.box
  .container
    .header Employer Create
    form(action='/Users/Login', method='POST')
      .content
        ul
          li Name
          li
            input#name(type='text', name='name')
          li Email Address
          li
            input#password(type='text', name='email')
          li
            input.checkbox(type='checkbox')
            | Remind me after 14 days
      .confirm
        .left Forgot password?
        .right
          button#login Create Account